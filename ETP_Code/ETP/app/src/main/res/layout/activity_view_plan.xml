<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="left"
    android:gravity="left"
    android:layoutDirection="ltr"
    android:textDirection="ltr">
    <LinearLayout
        android:id="@+id/up_down_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/trip_data"
        android:layout_marginTop="-20dp"
        android:elevation="10dp"
        android:layout_centerHorizontal="true">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            app:cardCornerRadius="15dp"
            android:background="@drawable/circle_layout">
            <ImageView
                android:id="@+id/up_down_arrow"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/ic_keyboard_arrow_up_black_24dp" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/trip_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layoutDirection="ltr"
        android:elevation="9dp">
        <LinearLayout
            android:id="@+id/trip_navbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="horizontal"
            android:background="@color/colorPrimaryDark"
            android:translationZ="3dp"
            android:layoutDirection="ltr"
            android:weightSum="10">
            <ImageView
                android:id="@+id/back_to_dashboard"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_arrow_back_white_24dp"
                android:padding="15dp"
                android:clickable="true"
                android:background="@drawable/ripple"
                android:layoutDirection="ltr" />
            <TextView
                android:id="@+id/posted_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Name's Plan"
                android:textColor="@color/whit"
                android:padding="15dp"
                android:layoutDirection="ltr"
                android:layout_weight="10" />
            <LinearLayout
                android:id="@+id/add_exist_trip"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:background="@drawable/ripple"
                android:layout_weight="0">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_add_black_24dp"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:orientation="vertical"
            android:background="#fff"
            android:translationZ="4dp"
            android:layoutDirection="ltr">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    android:elevation="10dp"
                    android:layoutDirection="ltr">
                    <ImageView
                        android:id="@+id/trip_image3"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/im1"
                        android:layout_margin="0dp"
                        android:scaleType="centerCrop"
                        android:layoutDirection="ltr"/>
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="5"
                    android:layout_marginLeft="@dimen/eight">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="3"
                        android:weightSum="4"
                        android:layout_marginBottom="@dimen/four">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_weight="3"
                            android:weightSum="3"
                            android:paddingTop="@dimen/four">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="2">
                                <TextView
                                    android:id="@+id/trip_name3"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="Hassaan Nabil"
                                    android:textColor="#333"
                                    android:layoutDirection="ltr"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_weight="1"
                                android:weightSum="3"
                                android:paddingLeft="@dimen/eight">
                                <TextView
                                    android:id="@+id/trip_place3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="In Luxor"
                                    android:textColor="#666"
                                    android:layoutDirection="ltr"
                                    android:layout_weight="2"
                                    android:textDirection="ltr"/>
                                <TextView
                                    android:id="@+id/post_time3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="2h"
                                    android:textColor="#666"
                                    android:layoutDirection="ltr"
                                    android:layout_weight="1"/>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:weightSum="2">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_weight="1"
                                android:gravity="right">
                                <TextView
                                    android:id="@+id/trip_rate3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="2.5"
                                    android:textColor="#F8C330"
                                    android:layoutDirection="ltr"/>
                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    app:srcCompat="@drawable/ic_star_half_black_24dp"
                                    android:layoutDirection="ltr"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_weight="1"
                                android:gravity="right">
                                <TextView
                                    android:id="@+id/budget3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="70"
                                    android:textColor="#F8C330"
                                    android:layoutDirection="ltr" />
                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    app:srcCompat="@drawable/ic_attach_money_yellow_24dp"
                                    android:layoutDirection="ltr"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/trip_information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxHeight="250dp"
                android:orientation="vertical"
                android:textDirection="ltr"
                android:layoutDirection="ltr">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_trip_pois_view"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:paddingTop="@dimen/eight"
                    android:layoutDirection="ltr"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/layout_write_comment"
        android:layout_below="@+id/trip_data"
        android:layoutDirection="ltr">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_comments_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layoutDirection="ltr"
            android:background="@color/whit"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_write_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="6dp"
        android:orientation="horizontal"
        android:background="#fff"
        android:layoutDirection="ltr"
        android:elevation="11dp"
        android:weightSum="4">
        <EditText
            android:id="@+id/comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="left"
            android:hint="Write comment..."
            android:inputType="text"
            android:textSize="15sp"
            android:background="@drawable/bg_comment"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layoutDirection="ltr"
            android:layout_weight="4"/>
        <LinearLayout
            android:id="@+id/submit_comment"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="6dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_send_black_24dp"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>