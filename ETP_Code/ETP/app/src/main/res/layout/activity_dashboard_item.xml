<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="left"
    android:gravity="left"
    android:layoutDirection="ltr"
    android:textDirection="ltr">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:orientation="horizontal"
        android:background="@drawable/bord_radius2"
        android:layout_marginBottom="5dp"
        android:layoutDirection="ltr"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:elevation="10dp"
                android:layoutDirection="ltr">
                <ImageView
                    android:id="@+id/trip_image2"
                    android:layout_width="60dp"
                    android:layout_height="90dp"
                    android:src="@drawable/im1"
                    android:layout_margin="0dp"
                    android:scaleType="centerCrop"
                    android:layoutDirection="ltr"/>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="5"
                android:layout_marginLeft="@dimen/eight">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="3"
                    android:weightSum="4"
                    android:layout_marginBottom="@dimen/four">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="3"
                        android:weightSum="3"
                        android:paddingTop="@dimen/four">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2">
                            <TextView
                                android:id="@+id/trip_name2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Hassaan Nabil"
                                android:textColor="#333"
                                android:layoutDirection="ltr"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_weight="1"
                            android:weightSum="3"
                            android:paddingLeft="@dimen/eight">
                            <TextView
                                android:id="@+id/trip_place2"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="In Luxor"
                                android:textColor="#666"
                                android:layoutDirection="ltr"
                                android:layout_weight="2"
                                android:textDirection="ltr"/>
                            <TextView
                                android:id="@+id/post_time2"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="2h"
                                android:textColor="#666"
                                android:layoutDirection="ltr"
                                android:layout_weight="1"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:weightSum="2">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_weight="1"
                            android:gravity="right">
                            <TextView
                                android:id="@+id/trip_rate2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2.5"
                                android:textColor="#F8C330"
                                android:layoutDirection="ltr"/>
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                app:srcCompat="@drawable/ic_star_half_black_24dp"
                                android:layoutDirection="ltr"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_weight="1"
                            android:gravity="right">
                            <TextView
                                android:id="@+id/budget2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="70"
                                android:textColor="#F8C330"
                                android:layoutDirection="ltr" />
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                app:srcCompat="@drawable/ic_attach_money_yellow_24dp"
                                android:layoutDirection="ltr"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:id="@+id/divider2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#DADADA"
                    android:layout_marginLeft="@dimen/four"
                    android:layout_marginTop="@dimen/eight"
                    android:layout_marginBottom="@dimen/four"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="2"
                    android:weightSum="2"
                    android:layoutDirection="ltr"
                    android:layout_marginLeft="@dimen/eight"
                    android:gravity="bottom">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:gravity="left"
                        android:layout_marginLeft="@dimen/sexten">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_insert_comment_black_24dp"
                            android:layout_marginRight="@dimen/four"/>

                        <TextView
                            android:id="@+id/number_of_comments2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layoutDirection="ltr"
                            android:text="0" />                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginRight="@dimen/sexten">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_playlist_add_black_30dp"
                            android:layout_marginRight="@dimen/four"/>
                        <TextView
                            android:id="@+id/number_of_exe2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:layoutDirection="ltr" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>