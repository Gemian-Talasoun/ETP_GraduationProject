<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".signUp"
    android:layoutDirection="ltr"
    android:textDirection="ltr"
    android:background="@drawable/cover6"
    >

    <ProgressBar
        android:id="@+id/sign_up_progress_bar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="45dp"
        android:layout_marginRight="30dp"
        android:fontFamily="@font/kaushan_script"
        android:gravity="left"
        android:layoutDirection="ltr"
        android:text="Sign up"
        android:textAllCaps="false"
        android:textColor="#F8C330"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.174"
        app:layout_constraintStart_toStartOf="parent" />

    <ScrollView
        android:id="@+id/setting_scroll_view_log"
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="150dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:outlineSpotShadowColor="#ccc"
            android:gravity="bottom"
            android:padding="40dp"
            android:translationZ="5dp"
            tools:layout_editor_absoluteX="20dp"
            tools:layout_editor_absoluteY="0dp"
            android:layoutDirection="ltr">


    <!--    Full Name    -->

            <EditText
                android:id="@+id/fullname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/back_input"
                android:ems="10"
                android:gravity="left"
                android:hint="Full Name"
                android:inputType="text"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingRight="20dp"
                android:paddingBottom="10dp"
                android:textSize="12sp"
                android:layoutDirection="ltr"
                android:textColor="#00184a"
                />
    <!--  Email  -->


            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/back_input"
                android:ems="10"
                android:gravity="left"
                android:hint="E-mail"
                android:inputType="textEmailAddress"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingRight="20dp"
                android:paddingBottom="10dp"
                android:textSize="12sp"
                android:layoutDirection="ltr"
                android:textColor="#00184a"
                />

    <!--    Password    -->

            <EditText
                android:id="@+id/pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/back_input"
                android:ems="10"
                android:gravity="left"
                android:hint="Password"
                android:inputType="textWebPassword"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingRight="20dp"
                android:paddingBottom="10dp"
                android:textSize="12sp"
                android:layoutDirection="ltr"
                android:textColor="#00184a"
                />
    <!--   Confirm pass   -->
            <EditText
                android:id="@+id/pass2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/back_input"
                android:ems="10"
                android:gravity="left"
                android:hint="Confirm Password"
                android:inputType="textWebPassword"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingRight="20dp"
                android:paddingBottom="10dp"
                android:textSize="12sp"
                android:layoutDirection="ltr"
                android:textColor="#00184a"
                />

            <Button
                android:id="@+id/preference_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_marginTop="20dp"
                android:text="Click to select preference"
                android:textAllCaps="false"
                android:gravity="left|center"
                android:textColor="#00184a"
                android:layoutDirection="ltr"
                android:textSize="12sp"
                android:textStyle="normal"
                android:drawableRight="@drawable/ic_keyboard_arrow_down_black_24dp"
                android:background="@drawable/back_input"
                />


            <TextView
                android:id="@+id/preference_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"
                android:text=""
                android:textColor="#00184a"
                android:textSize="12dp"
                android:layoutDirection="ltr"/>

    <!--    Button Register    -->
            <Button
                android:id="@+id/btn_signUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/ripple"
                android:text="Sign UP"
                android:textAllCaps="true"
                android:textColor="#F8C330"
                android:textSize="17sp"
                android:layoutDirection="ltr"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/facebtu"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/fb_icon"
                    android:gravity="center"
                    android:text="f"
                    android:textAllCaps="false"
                    android:textColor="#fff"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/goolgebtu"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/gmail_icon"
                    android:gravity="center"
                    android:text="G"
                    android:textColor="#B23121"
                    android:textSize="25sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>