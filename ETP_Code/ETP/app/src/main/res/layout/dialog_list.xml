<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/sexten"
    android:layoutDirection="ltr"
    android:textDirection="ltr"
    android:background="@color/colorPrimaryDark">
    <LinearLayout
        android:id="@+id/layout_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/dialog_list_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Favorite Places"
            android:textColor="@color/whit"
            android:paddingLeft="@dimen/sexten"
            android:paddingRight="@dimen/sexten"
            android:paddingTop="@dimen/eight"
            android:paddingBottom="@dimen/eight"
            android:textSize="18dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="?android:attr/listDivider"
            android:outlineAmbientShadowColor="@color/whit"
            android:outlineSpotShadowColor="@color/whit"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="250dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/dialog_list_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layoutDirection="ltr" />
            </LinearLayout>
        </ScrollView>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="?android:attr/listDivider"
            android:outlineAmbientShadowColor="@color/whit"
            android:outlineSpotShadowColor="@color/whit"/>
        <LinearLayout
            android:id="@+id/dialog_list_add_new_Place"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4"
            android:paddingLeft="@dimen/eight"
            android:paddingRight="@dimen/eight"
            android:paddingTop="@dimen/four"
            android:paddingBottom="@dimen/four"
            android:layout_alignParentBottom="true">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/ic_add_white_24dp"
                android:background="@drawable/circle_background_dark"
                android:layout_gravity="center"
                android:layout_margin="@dimen/four"
                android:padding="@dimen/eight"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Add Place"
                android:textColor="@color/whit"
                android:padding="@dimen/eight"
                android:layout_margin="@dimen/four"
                android:textSize="15dp"
                />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>