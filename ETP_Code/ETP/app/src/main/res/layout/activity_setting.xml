<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profile_activities.SettingActivity"
    android:orientation="vertical"
    android:layoutDirection="ltr"
    android:textDirection="ltr"
    android:background="@color/whit">
    <LinearLayout
        android:id="@+id/setting_navbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:background="@color/colorPrimaryDark"
        android:translationZ="3dp"
        android:layoutDirection="ltr">
        <ImageView
            android:id="@+id/setting_back_to_profile"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_arrow_back_white_24dp"
            android:padding="15dp"
            android:clickable="true"
            android:background="@drawable/ripple"
            android:layoutDirection="ltr" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Setting"
            android:textColor="#fff"
            android:padding="15dp"
            android:layoutDirection="ltr"
            android:textSize="16dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ddd">
        <ScrollView
            android:id="@+id/setting_scroll_view"
            android:fillViewport="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="@dimen/four"
                android:layout_marginLeft="@dimen/four"
                android:layout_marginBottom="@dimen/four">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:gravity="center_horizontal">
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="center_vertical"
                        app:cardCornerRadius="60dp"
                        android:background="@drawable/circle_layout">
                        <ImageView
                            android:id="@+id/setting_user_image"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:background="@drawable/circle_layout"
                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/ic_person" />
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center_vertical"
                        app:cardCornerRadius="20dp"
                        app:cardBackgroundColor="#999"
                        android:background="@drawable/circle_layout">
                        <ImageButton
                            android:id="@+id/setting_edit_user_image"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            app:srcCompat="@drawable/ic_add_a_photo_black_24dp"
                            android:scaleType="centerInside"
                            android:background="#999" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/whit"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/setting_full_name_layout"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:orientation="vertical"
                        android:padding="@dimen/eight">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="FULL NAME"
                            android:textSize="12dp"
                            android:textColor="#333"
                            android:layout_marginBottom="-10dp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:weightSum="4">
                            <EditText
                                android:id="@+id/setting_full_name"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="0.5"
                                android:textSize="15dp"
                                android:text="Gemian Talasoun"
                                android:textColor="#666"
                                android:enabled="false" />
                            <ImageView
                                android:id="@+id/setting_edit_full_user_name"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="3.4"
                                app:srcCompat="@drawable/ic_edit_black_24dp"
                                android:scaleType="centerInside"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/whit"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/setting_email_layout"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:orientation="vertical"
                        android:padding="@dimen/eight">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="EMAIL"
                            android:textSize="12dp"
                            android:textColor="#333"
                            android:layout_marginBottom="-10dp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:weightSum="4">
                            <EditText
                                android:id="@+id/setting_email"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="0.5"
                                android:textSize="15dp"
                                android:text="bolaaskander90@gmail.com"
                                android:textColor="#666"
                                android:enabled="false" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/whit"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/setting_password_layout"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:orientation="vertical"
                        android:padding="@dimen/eight">
                        <TextView
                            android:textSize="12dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="PASSWORD"
                            android:textColor="#333"
                            android:layout_marginBottom="-10dp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:weightSum="4">
                            <EditText
                                android:id="@+id/setting_password"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="0.5"
                                android:text="bolaaskander"
                                android:textSize="15dp"
                                android:enabled="false"
                                android:textColor="#666"
                                android:inputType="textPassword" />
                            <ImageView
                                android:id="@+id/setting_edit_password"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="3.4"
                                app:srcCompat="@drawable/ic_edit_black_24dp"
                                android:scaleType="centerInside"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/whit"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/setting_address_layout"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:orientation="vertical"
                        android:padding="@dimen/eight">
                        <TextView
                            android:textSize="12dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="ADDRESS"
                            android:textColor="#333"
                            android:layout_marginBottom="-10dp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:weightSum="4">
                            <EditText
                                android:id="@+id/setting_address"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="0.5"
                                android:textSize="15dp"
                                android:text="qena / naqada"
                                android:textColor="#666"
                                android:enabled="false" />
                            <ImageView
                                android:id="@+id/setting_edit_address"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="3.4"
                                app:srcCompat="@drawable/ic_edit_black_24dp"
                                android:scaleType="centerInside"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/whit"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/setting_favorite_list_layout"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:orientation="vertical"
                        android:padding="@dimen/eight">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:weightSum="4">
                            <TextView
                                android:id="@+id/setting_favorite_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:textSize="15dp"
                                android:text="Favorite Places"
                                android:layout_gravity="center"
                                android:textColor="#333"
                                android:paddingLeft="@dimen/eight" />
                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="3.5"
                                app:srcCompat="@drawable/ic_chevron_right_black_24dp"
                                android:scaleType="centerInside"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/whit"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/setting_forbidden_list_layout"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:orientation="vertical"
                        android:padding="@dimen/eight">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:weightSum="4">
                            <TextView
                                android:id="@+id/setting_forbidden_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:textSize="15dp"
                                android:text="Forbidden Places"
                                android:layout_gravity="center"
                                android:textColor="#333"
                                android:paddingLeft="@dimen/eight" />
                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="3.5"
                                app:srcCompat="@drawable/ic_chevron_right_black_24dp"
                                android:scaleType="centerInside"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/whit"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/setting_preferences_list_layout"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:orientation="vertical"
                        android:padding="@dimen/eight">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:weightSum="4">
                            <TextView
                                android:id="@+id/setting_preferences_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:textSize="15dp"
                                android:text="Preferences"
                                android:layout_gravity="center"
                                android:textColor="#333"
                                android:paddingLeft="@dimen/eight" />
                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="3.5"
                                app:srcCompat="@drawable/ic_chevron_right_black_24dp"
                                android:scaleType="centerInside"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/whit"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/setting_submit_layout"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="vertical"
                        android:padding="@dimen/eight">
                        <Button
                            android:id="@+id/setting_submit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Submit"
                            android:textColor="@color/whit"
                            android:background="@drawable/ripple"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>