<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlaceInformationActivity"
    android:layoutDirection="ltr"
    android:textDirection="ltr"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/place_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:background="@color/colorPrimaryDark"
        android:translationZ="3dp"
        android:layoutDirection="ltr"
        android:paddingLeft="0dp"
        android:layout_marginLeft="0dp"
        android:weightSum="5">
        <ImageView
            android:id="@+id/place_item_back_to_Places"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_arrow_back_white_24dp"
            android:padding="15dp"
            android:clickable="true"
            android:background="@drawable/ripple"
            android:layoutDirection="ltr"
            android:layout_weight="0"/>
        <TextView
            android:id="@+id/place_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Place Information"
            android:textColor="#fff"
            android:padding="15dp"
            android:layoutDirection="ltr"
            android:textSize="16dp"
            android:layout_weight="4"/>
        <ImageView
            android:id="@+id/place_details_menu"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="end|right"
            app:srcCompat="@drawable/ic_menu_vert_white_24dp"
            android:background="@drawable/ripple"
            android:padding="5dp" />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/place_toolbar"
        android:elevation="0dp">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/place_details_image"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/im1"
                    android:scaleType="centerCrop"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="4">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="3">
                        <TextView
                            android:id="@+id/place_details_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18dp"
                            android:textColor="#111"
                            android:text="Mummification Museum"
                            android:paddingTop="@dimen/eight"
                            android:paddingLeft="@dimen/eight"
                            android:paddingRight="@dimen/eight" />
                        <TextView
                            android:id="@+id/place_details_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:textColor="#555"
                            android:text="in Luxor"
                            android:paddingLeft="@dimen/tewenty_four"
                            android:layout_marginTop="1dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/place_details_rate"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="3.5"
                            android:gravity="center"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            app:srcCompat="@drawable/ic_star_half_black_24dp" />
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:id="@+id/place_details_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:textColor="#333"
                    android:text="where it displays many royal mummies, and a number of stuffed animals, as well as a set of mummification tools used in the past, and there is also a model in a funerary boat to transport the body of the deceased Across the Nile to the mainland."
                    android:padding="@dimen/sexten" />
                <LinearLayout
                    android:id="@+id/place_details_preferences_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/eight">
                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_gravity="center_vertical"
                        app:srcCompat="@drawable/ic_local_activity_black_24dp"/>
                    <TextView
                        android:id="@+id/place_details_preferences"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/eight"
                        android:textColor="#333"
                        android:text="dsadsfd"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/place_details_address_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/eight">
                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        app:srcCompat="@drawable/ic_location_on_black_24dp"
                        android:layout_gravity="center_vertical"/>
                    <TextView
                        android:id="@+id/place_details_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/eight"
                        android:textColor="#333"
                        android:text="dsadsfd"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/place_details_price_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/eight">
                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        app:srcCompat="@drawable/ic_attach_money_black_24dp"
                        android:layout_gravity="center_vertical"/>
                    <TextView
                        android:id="@+id/place_details_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/eight"
                        android:textColor="#333"
                        android:text="dsadsfd"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/place_details_time_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/eight">
                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        app:srcCompat="@drawable/ic_access_time_black_24dp"
                        android:layout_gravity="center_vertical"/>
                    <TextView
                        android:id="@+id/place_details_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/eight"
                        android:textColor="#333"
                        android:text="dsadsfd"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/place_details_phone_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/eight">
                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        app:srcCompat="@drawable/ic_phone_in_talk_black_24dp"
                        android:layout_gravity="center_vertical"/>
                    <TextView
                        android:id="@+id/place_details_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/eight"
                        android:textColor="#333"
                        android:text="dsadsfd"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/menu_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/place_toolbar"
        android:layout_alignParentEnd="true"
        android:background="#eee"
        android:layout_marginTop="-8dp"
        android:orientation="vertical"
        android:visibility="invisible"
        android:gravity="top"
        android:elevation="10dp" >
        <LinearLayout
            android:id="@+id/place_details_make_favorite_place"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/button_effect">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                app:srcCompat="@drawable/ic_thumb_up_white_24dp"
                android:layout_margin="@dimen/four" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="Make It Favorite "
                android:layout_margin="@dimen/four" />
            <ImageView
                android:id="@+id/favorite_item_selected"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_margin="@dimen/four"
                app:srcCompat="@drawable/ic_done_all_black_24dp"
                android:padding="2dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/place_details_make_forbidden_place"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/button_effect">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                app:srcCompat="@drawable/ic_thumb_down_black_24dp"
                android:layout_margin="@dimen/four"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="Make It Forbidden"
                android:layout_margin="@dimen/four" />
            <ImageView
                android:id="@+id/forbidden_item_selected"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_margin="@dimen/four"
                android:padding="2dp"
                app:srcCompat="@drawable/ic_no_icon_24dp"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>