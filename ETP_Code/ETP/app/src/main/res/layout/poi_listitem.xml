<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/whit"
    android:layout_marginTop="0dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="0dp"
    android:id="@+id/poi_layout"
    android:layoutDirection="ltr"
    android:textDirection="ltr"
    >
    <RelativeLayout
        android:id="@+id/poi_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/timeline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <RadioButton
            android:id="@+id/poi_starttime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="15:13"
            android:clickable="false"
            android:buttonTint= "#F8C330"
            />
        <View
            android:id="@+id/line"
            android:layout_width="3dp"
            android:layout_height="180dp"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:background="#7E7E7E"
            android:layout_below="@+id/poi_starttime"
            />
        <androidx.cardview.widget.CardView
            android:id="@+id/card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            android:elevation="10dp"
            android:layout_gravity="center_vertical"
            android:layout_below="@+id/poi_starttime"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layoutDirection="ltr"
            >
            <ImageView
                android:id="@+id/poi_image"
                android:layout_toRightOf="@+id/line"
                android:layout_margin="0dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/im1"
                android:scaleType="centerCrop"
                />
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="30dp"
            android:layout_below="@+id/card"
            >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="3dp">
            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_timer_black_24dp"
                />

            <TextView
                android:id="@+id/poi_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="13 min"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="3dp"
                android:textColor="#F8C330"
                />
        </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="3dp">
                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_monetization_on_black_24dp" />

                <TextView
                    android:id="@+id/poi_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:text="13"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="3dp"
                    android:textColor="#F8C330"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_marginTop="3dp"
                >

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_local_offer_black_24dp" />

            <TextView
                android:id="@+id/poi_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="13"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="3dp"
                android:textColor = "#7E7E7E"
                />
            </LinearLayout>
        </LinearLayout>
        <RadioButton
            android:id="@+id/poi_endtime"
            android:layout_below="@+id/line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="15:13"
            android:buttonTint = "#F8C330"
            android:clickable="false"
             />
        <View
            android:id="@+id/botline"
            android:layout_width="3dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:background= "#00184a"
            android:layout_below="@+id/poi_endtime"
            />
    </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/timeline"

            android:layoutDirection="ltr">

            <TextView
                android:id="@+id/poi_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Luxor Temple"
                android:textSize="17sp"
                android:textColor= "#00184a"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"

                />
            <TextView
                android:id="@+id/poi_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Describtion"
                android:textSize="11sp"
                android:textColor="#000"
                android:layout_margin="10dp"
                />

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
